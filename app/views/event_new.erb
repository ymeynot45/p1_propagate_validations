<h1>Make an Event!</h1><br>

<div class="create_box">
  <form id="create_event" method="post" action="/events/create">
    <label> Organizer_name:<input type="text" name="event[organizer_name]" value="<%= @event.organizer_name%>"></label><%if @event.errors[:organizer_name].any?%>
      <%=@event.errors[:organizer_name]%><%end%><br>
    <label> Organizer_email:<input type="email" name="event[organizer_email]" value="<%= @event.organizer_email%>"></label>
    <%if @event.errors[:organizer_email].any?%>
      <%=@event.errors[:organizer_email]%><%end%><br>
    <label> Title: <input type="text" name="event[title]" value="<%= @event.title%>"></label>
    <%if @event.errors[:title].any?%>
      <%=@event.errors[:title]%><%end%><br>
    <label> Event Date: <input type="date" name="event[date]"></label>
    <%if @event.errors[:date].any?%>
      <%=@event.errors[:date]%>
    <%end%><br>
    <input type="submit">
  </form>
</div>